{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@plugins/*": ["./*/src"]
    }
  },
  "include": ["./*/src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
  